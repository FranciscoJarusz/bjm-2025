                />

                <img src="/voltek.svg" alt="Voltek Logo" class="logo-item w-32 h-32 object-contain transition-all duration-300" 
                    data-name="Voltek"
                    data-description="Una marca que transmite dinamismo y tecnología desde la simplicidad. Las líneas angulares construyen un símbolo versátil y atractivo, capaz de adaptarse con fuerza a distintos soportes y aplicaciones."
                    data-additional="Venta de teléfonos y accesorios"
                />

            </div>   
                     
        </div>

    </div>

</section>

<style>
    .logo-item {
        cursor: pointer;
    }
    
    .logo-item:hover {
        transform: scale(1.05);
    }
    
    .logo-item.activo {
        transform: scale(1.2);
        position: relative;
    }

    #contenedor-logos.hover .logo-item:not(.activo) {
        opacity: 0.3;
    }

	.hero-pattern::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background-image: url('/pattern.png');
		background-repeat: repeat;
		opacity: 0.2;
		pointer-events: none;
		z-index: 1;
	}
	.hero-pattern {
        background-color: white;
		position: relative;
	}
	
	.hero-pattern > * {
		z-index: 2;
	}
</style>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const contenedorLogos = document.getElementById('contenedor-logos');
        const nombreLogo = document.getElementById('nombre-logo');
        const descripcion = document.getElementById('descripcion');
        const textoAdicional = document.getElementById('texto-adicional');
        const logoItems = document.querySelectorAll('.logo-item');
        
        const textoDefault = "A lo largo de mi trayectoria, he desarrollado una amplia variedad de logotipos para diversos rubros, que van desde equipos de eSports y fútbol amateur hasta proyectos empresariales, cada uno con su propia impronta y propósito.";
        
        let logoActivo: Element | null = null;
        
        logoItems.forEach((logo) => {
            logo.addEventListener('click', () => {

                if (logoActivo === logo) {

                    if (contenedorLogos) {
                        contenedorLogos.classList.remove('hover');
                    }
                    if (logoActivo) {
                        logoActivo.classList.remove('activo');
                    }
                    if (nombreLogo) {
                        nombreLogo.style.display = 'none';
                    }
                    if (descripcion) {
                        descripcion.textContent = textoDefault;
                    }
                    if (textoAdicional) {
                        textoAdicional.style.display = 'none';
                    }
                    logoActivo = null;

                } else {

                    if (logoActivo) {
                        logoActivo.classList.remove('activo');
                    }
                    
                    if (contenedorLogos) {
                        contenedorLogos.classList.add('hover');
                    }
                    logo.classList.add('activo');
                    
                    const name = logo.getAttribute('data-name');
                    const description = logo.getAttribute('data-description');
                    const additional = logo.getAttribute('data-additional');
                    
                    if (nombreLogo && name) {
                        nombreLogo.textContent = name;
                        nombreLogo.style.display = 'block';
                    }
                    
                    if (descripcion && description) {
                        descripcion.textContent = description;
                    }
                    
                    if (textoAdicional && additional) {
                        textoAdicional.textContent = additional;
                        textoAdicional.style.display = 'block';
                    }

                    logoActivo = logo;
                }
            });
        });
    });
</script>