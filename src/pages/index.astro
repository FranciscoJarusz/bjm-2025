---
import Layout from '../layouts/Layout.astro';
import Header from '@/components/Header.astro';
import Hero from '@/sections/Hero.astro';
import SobreMi from '@/sections/SobreMi.astro';
import Trabajos from '@/sections/Trabajos.astro';
import Footer from '@/components/Footer.astro';
---

<Layout>

    <Header />    
    
    <main class="snap-y snap-mandatory relative w-full h-screen overflow-auto scroll-smooth">

		<section class="snap-center h-screen section" data-header-color="white">
			<Hero />
		</section>

		<section class="snap-center h-screen section" data-header-color="white">
			<SobreMi />
		</section>

        <section class="snap-center h-screen section" data-header-color="negro">
			<Trabajos />
		</section>

    </main>

</Layout>